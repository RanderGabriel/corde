{
  "compilerOptions": {
    "outDir": "lib",
    "resolveJsonModule": true,
    "allowJs": false,
    "pretty": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "allowUnreachableCode": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "./*.ts",
    "./*.js"
  ],
}