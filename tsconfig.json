{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": ".",
    "baseUrl": "",
    "rootDirs": [
      ".",
      "./src"
    ],
    "resolveJsonModule": true,
    "allowJs": false,
    "pretty": true,
    "skipLibCheck": true,
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "newLine": "LF",
    "noImplicitAny": true,
    "removeComments": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
}